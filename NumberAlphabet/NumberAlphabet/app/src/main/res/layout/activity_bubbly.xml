<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_blue"
    android:orientation="vertical"
    tools:context="com.application.thanh.numberalphabet.activity.NumberActivity"
    android:id="@+id/reFull">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home"
        android:layout_alignParentLeft="true"
        android:gravity="top"
        android:id="@+id/imgHome"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_music"
        android:layout_alignParentRight="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linerL0">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\?"
                    android:id="@+id/numOne"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/fontSizeBubble"
                    android:paddingTop="@dimen/paddingBubble"
                    android:background="@drawable/balloon_purple"
                    android:textColor="@color/colorBlue"
                    android:layout_marginRight="@dimen/paddingBubble"
                    />
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linerL1">
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/numTwo"
                android:gravity="center_horizontal"
                android:textSize="@dimen/fontSizeBubble"
                android:paddingTop="@dimen/paddingBubble"
                android:background="@drawable/balloon_blue"
                android:textColor="@color/colorBlue"
                android:layout_marginRight="@dimen/paddingBubble"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linerL2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/fontSizeBubble"
                android:paddingTop="@dimen/paddingBubble"
                android:id="@+id/numThree"
                android:gravity="center_horizontal"
                android:background="@drawable/balloon_orange"
                android:textColor="@color/colorBlue"
                android:layout_marginRight="@dimen/paddingBubble"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linerL3">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:id="@+id/numFour"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/fontSizeBubble"
                    android:paddingTop="@dimen/paddingBubble"
                    android:background="@drawable/balloon_pink"
                    android:textColor="@color/colorBlue"
                    android:layout_marginRight="@dimen/paddingBubble"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linerL4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\?"
                    android:id="@+id/numFive"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/fontSizeBubble"
                    android:paddingTop="@dimen/paddingBubble"
                    android:background="@drawable/balloon_green"
                    android:textColor="@color/colorBlue"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:id="@+id/answer"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="@dimen/txtSize"
                android:gravity="center"
                android:paddingLeft="@dimen/padText"
                android:paddingRight="@dimen/padText"
                android:id="@+id/ansOne"
                android:textColor="@color/colorOne"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="@dimen/txtSize"
                android:gravity="center"
                android:paddingLeft="@dimen/padText"
                android:paddingRight="@dimen/padText"
                android:id="@+id/ansTwo"
                android:textColor="@color/colorTwo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="@dimen/txtSize"
                android:gravity="center"
                android:paddingLeft="@dimen/padText"
                android:paddingRight="@dimen/padText"
                android:id="@+id/ansThree"
                android:textColor="@color/colorThree"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="@dimen/txtSize"
                android:gravity="center"
                android:paddingLeft="@dimen/padText"
                android:paddingRight="@dimen/padText"
                android:id="@+id/ansFour"
                android:textColor="@color/colorFour"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="@dimen/txtSize"
                android:gravity="center"
                android:paddingLeft="@dimen/padText"
                android:paddingRight="@dimen/padText"
                android:id="@+id/ansFive"
                android:textColor="@color/colorFive"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="@dimen/txtSize"
                android:gravity="center"
                android:paddingLeft="@dimen/padText"
                android:paddingRight="@dimen/padText"
                android:id="@+id/ansSix"
                android:textColor="@color/colorSix"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
